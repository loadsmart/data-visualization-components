{
  "git": {
    "commitMessage": "chore(lib): release version ${version} [skip ci]",
    "requireCleanWorkingDir": false,
    "tag": false,
    "requireUpstream": false,
    "pushArgs": ["--set-upstream origin main"]
  },
  "github": {
    "release": false,
    "releaseName": "${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
