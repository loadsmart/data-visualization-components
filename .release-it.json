{
  "git": {
    "commitMessage": "chore(lib): release version ${version} [skip ci]",
    "requireCleanWorkingDir": false,
    "requireUpstream": false
  },
  "github": {
    "releaseName": "${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "npm": {
    "skipChecks": true
  }
}
